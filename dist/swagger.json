{
    "openapi": "3.0.3",
    "info": {
        "title": "Contacts API Back-End",
        "description": "API de consulta e manipulação de contatos salvos em um banco de dados MySQL para consumo de uma aplicação Front-End",
        "contact": { "name": "Lucas Costa", "email": "1lucascq@gmail.com" },
        "version": "1.0.1"
    },
    "servers": [
        { "url": "http://contacts-bk.herokuapp.com", "description": "API de testes" }
    ],
    "paths": {
        "/contacts": {
            "get": {
                "summary": "Obtém dados dos contato",
                "description": "Busca os dados de todos os contatos disponíveis no banco de dados.",
                "tags": ["Contacts"],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Contact"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/contacts/{id}": {
            "get": {
                "summary": "Obtém dados de um contatos",
                "description": "Busca os dados disponíveis do contato especificado através do parâmetro 'id'.",
                "tags": ["Contacts"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "id do contato",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Contact"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "The refereed ID doesn't exist!"
                    }
                }
            },
            "delete": {
                "summary": "Deleta um contato",
                "description": "Realiza a deleção de um contato previamente informado através do seu parâmetro 'id'.",
                "tags": ["Contacts"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "id do contato",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "Delete": {
                                        "type": "object",
                                        "properties": {
                                            "message": "Contact deleted!"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "The refereed ID doesn't exist!"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Contact": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "Image": {
                        "type": "string"
                    },
                    "phoneNumbers": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        },
                        "example": [38999999999, 11999334455]
                    }
                }
            }
        }
    }
}
